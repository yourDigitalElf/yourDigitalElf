<div style="background: #ffaaaa;" class="card mb-3">

  <div class="card-body">

    <h1 class="listTitle">
      <span class="floatR">
        <img src="../assts/christmas-tree_87180.png" width="100" height="100" alt="Card image cap">
      </span>
      Welcome to Your Digital Elf gift list
      <span class="floatL">
        <img src="../assts/christmas-tree_87180.png" width="100" height="100" alt="Card image cap">
      </span>
    </h1>


  </div>
</div>

<div style="background: #cef2c4" class="tile is-parent">
  <article class="tile is-child notification inputB rcorners">
    <p style="font-family: 'Fredericka the Great'" class="title">Get Started!</p>
    <p class="subtitle">Enter desired gifts:</p>

    <form class="content" id="present">
      <div class="control">
        <p class="control has-icons-left">
          <input class="input is-hovered" id="gifts-input" type="text" placeholder="Enter Gifts">
          <span class="icon is-medium is-left">
            <i class="fas fa-tree"></i>
          </span>
        </p>
      </div>

      <div class="control">
        <p class="control has-icons-left">
          <select style="font-family: fredericka the great; color: #7a4709" class="input is-hovered input"
            id="gift-rating" type="text">

            <option value="">Gift Rating</option>
            <option style="font-family: Monoton; color: #fca002" value="0">0 stars</option>
            <option style="font-family: Monoton; color: #fca002" value="1">1 star</option>
            <option style="font-family: Monoton; color: #fca002" value="2">2 stars</option>
            <option style="font-family: Monoton; color: #fca002" value="3">3 stars</option>
            <option style="font-family: Monoton; color: #fca002" value="4">4 stars</option>
            <option style="font-family: Monoton; color: #fca002" value="5">5 stars</option>
          </select>
          <span class="icon is-large is-left">
            <i class="fas fa-tree"></i>
          </span>
        </p>
        <a id="addBtn" type="submit" class="cardShadow btn btn-warning justify-content-left">Submit</a>
      </div>
    </form>
    <div style="background: #ff8080" class="container mt-3 mb-3">
      <h2>Your List</h2>
      <p>Items are listed below based on the star rating you selected</p>
      <ul class="list-group">

        {{#each Present}}
        {{> gifts/gifts-block}}

        {{/each}}

      </ul>
    </div>

</div>



